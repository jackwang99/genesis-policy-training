            </dependency>

            <!-- Org Struct -->
            <dependency>
                <groupId>com.eisgroup.genesis.orgstruct</groupId>
                <artifactId>org-struct-repository</artifactId>
                <version>${genesis.core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.eisgroup.genesis.orgstruct</groupId>
                <artifactId>org-struct-lifecycle</artifactId>
                <version>${genesis.core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.eisgroup.genesis.orgstruct</groupId>
                <artifactId>org-struct-search</artifactId>
                <version>${genesis.core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.eisgroup.genesis.orgstruct</groupId>
                <artifactId>org-struct-events</artifactId>
