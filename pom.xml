            </dependency>
            <dependency>
                <groupId>com.eisgroup.genesis.orgstruct</groupId>
                <artifactId>brand-facade</artifactId>
                <version>${genesis.core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.eisgroup.genesis.orgstruct</groupId>
                <artifactId>brand-repository</artifactId>
                <version>${genesis.core.version}</version>
            </dependency>
			<!-- Party proto domain -->
            <dependency>
                <groupId>com.eisgroup.genesis.proto</groupId>
                <artifactId>party-domain</artifactId>
                <version>${registry.ms.version}</version>
                <scope>runtime</scope>                
            </dependency>
            <!-- Testing -->
            <dependency>
                <groupId>com.eisgroup.genesis.test.product</groupId>
                <artifactId>test-product-model</artifactId>
                <version>${genesis.core.version}</version>
            </dependency>
            <dependency>
                <groupId>com.eisgroup.genesis.test.product</groupId>
                <artifactId>test-domain</artifactId>
                <classifier>no-party</classifier>
                <version>${genesis.core.version}</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

</project>
