<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>conversion-applications-pom</artifactId>
        <groupId>com.eisgroup.genesis.proto</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>conversion-app-suite</artifactId>

    <packaging>jar</packaging>
    <name>Conversion Applications Suite</name>
    <description>Conversion Applications Suite Module</description>

    <!-- this is an example of dev-app config, please configure to meet team needs, use "-Dapps=conversion -DnoBpm -DnoRating" to start applications -->
    <profiles>
        <profile>
            <id>embedded-app-start</id>
            <activation>
                <property>
                    <name>apps</name>
                    <value>conversion</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.eisgroup.genesis.tools</groupId>
                        <artifactId>frunner-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>conversion-applications-start</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>start</goal>
                                </goals>
                                <configuration>
                                    <executionName>conversion-applications</executionName>
                                    <parallelism>4</parallelism>
                                    <suspendBuild>true</suspendBuild>
                                    <applications>
                                        <!-- Security -->
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.security.applications</groupId>
                                            <artifactId>security-facade-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.security.applications</groupId>
                                            <artifactId>security-commands-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.security.applications</groupId>
                                            <artifactId>security-events-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.security.applications</groupId>
                                            <artifactId>security-deployer-app</artifactId>
                                            <version>${project.version}</version>
                                            <priority>2</priority>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto</groupId>
                                            <artifactId>genesis-sso</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <!-- Infra -->
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
                                            <artifactId>infra-facade-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <dependency>
                                            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
                                            <artifactId>infra-commands-app</artifactId>
                                            <version>${project.version}</version>
                                        </dependency>
                                        <dependency>
                                            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
                                            <artifactId>infra-events-app</artifactId>
                                            <version>${project.version}</version>
                                        </dependency>
                                        <dependency>
                                            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
                                            <artifactId>infra-deployer-app</artifactId>
                                            <version>${project.version}</version>
                                            <priority>1</priority>
                                        </dependency>
                                        <!-- CRM -->
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.crm.applications</groupId>
                                            <artifactId>crm-facade-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.crm.applications</groupId>
                                            <artifactId>crm-commands-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.crm.applications</groupId>
                                            <artifactId>crm-events-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.crm.applications</groupId>
                                            <artifactId>crm-deployer-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
<!--
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto</groupId>
                                            <artifactId>crm-batch-commands-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
-->

                                        <!-- Conversion -->
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto</groupId>
                                            <artifactId>conversion-deployer-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto</groupId>
                                            <artifactId>conversion-events-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto</groupId>
                                            <artifactId>conversion-job-commands-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto</groupId>
                                            <artifactId>conversion-mapping-commands-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto</groupId>
                                            <artifactId>conversion-facade-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                    </applications>
                                </configuration>
                            </execution>
                        </executions>
                        <configuration>
                            <systemProperties>
                                <systemProperty>
                                    <name>genesis.authorization.server.url</name>
                                    <value>http://localhost:8088</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>genesis.platform.baseurl</name>
                                    <value>http://loc-gen:8080</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>user.timezone</name>
                                    <value>UTC</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>genesis.bootstrap.exit.allowed</name>
                                    <value>false</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>spring.profiles.active</name>
                                    <value>basic-login,noop-party</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <!-- Infra -->
        <dependency>
            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
            <artifactId>infra-app-suite</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <!-- CRM -->
        <dependency>
            <groupId>com.eisgroup.genesis.proto.crm.applications</groupId>
            <artifactId>crm-app-suite</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <!-- Security -->
        <dependency>
            <groupId>com.eisgroup.genesis.proto.security.applications</groupId>
            <artifactId>security-app-suite</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        
        <!-- Conversion -->
        <dependency>
            <groupId>com.eisgroup.genesis.proto</groupId>
            <artifactId>conversion-deployer-app</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.proto</groupId>
            <artifactId>conversion-events-app</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.proto</groupId>
            <artifactId>conversion-job-commands-app</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.proto</groupId>
            <artifactId>conversion-mapping-commands-app</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.proto</groupId>
            <artifactId>conversion-facade-app</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        
    </dependencies>
</project>
