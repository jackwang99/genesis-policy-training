<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.eisgroup.genesis.personalauto</groupId>
    <artifactId>personal-auto-pom</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <artifactId>personal-auto-lifecycle</artifactId>
  <name>Personal Auto Product Prototype Lifecycle</name>
  <description>Personal Auto Product Prototype Lifecycle Module</description>
  <packaging>jar</packaging>

  <build>
  
    <plugins>
	<plugin>
     <groupId>com.eisgroup.genesis.tools</groupId>
     <artifactId>fgenerator-maven-plugin</artifactId>
     <executions>
         <execution>
             <id>generate-state-uml</id>
             <phase>generate-sources</phase>
             <goals>
                 <goal>generate</goal>
             </goals>
             <configuration>
                 <inputDirectory>${project.build.directory}/classes</inputDirectory>
                 <outputDirectory>${project.build.directory}/generated-umls/</outputDirectory>
                 <generators>
                     <generator>
                         <groupId>com.eisgroup.genesis.lifecycle</groupId>
                         <artifactId>state-machine-dsl-fgenerator</artifactId>
                         <version>${lifecycle.framework.version}</version>
                     </generator>
                 </generators>
             </configuration>
         </execution> 
     </executions>
 </plugin>
 
      <plugin>
        <groupId>com.eisgroup.genesis.tools</groupId>
        <artifactId>fcompiler-maven-plugin</artifactId>
        <executions>
          <execution>
            <configuration>
              <compilers>
                <compiler>
                  <groupId>com.eisgroup.genesis.lifecycle</groupId>
                  <artifactId>state-machine-dsl-fcompiler</artifactId>
                  <version>${lifecycle.framework.version}</version>
                </compiler>
              </compilers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.eisgroup.genesis.tools</groupId>
        <artifactId>fintrospector-maven-plugin</artifactId>
        <executions>
          <execution>
            <configuration>
              <introspectors>
                <introspector>
                  <groupId>com.eisgroup.genesis.lifecycle</groupId>
                  <artifactId>lifecycle-fintrospector</artifactId>
                  <version>${lifecycle.framework.version}</version>
                </introspector>
              </introspectors>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.eisgroup.genesis.tools</groupId>
        <artifactId>fgenerator-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>modeltree</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <addCompileSourceRoot>false</addCompileSourceRoot>
              <generators>
                <generator>
                  <groupId>com.eisgroup.genesis.kraken</groupId>
                  <artifactId>kraken-model-tree-generator</artifactId>
                  <version>${genesis.core.version}</version>
                </generator>
              </generators>
              <includes>
                <include>KrakenModelTreeJavaGenerator</include>
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>com.eisgroup.genesis.policy.core</groupId>
      <artifactId>policy-core-lifecycle-impl</artifactId>
    </dependency>
    <dependency>
      <groupId>com.eisgroup.genesis.policy.pnc.auto</groupId>
      <artifactId>policy-pnc-auto-lifecycle</artifactId>
    </dependency>
    <dependency>
      <groupId>com.eisgroup.genesis.personalauto</groupId>
      <artifactId>personal-auto-domain</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.eisgroup.genesis.personalauto</groupId>
      <artifactId>personal-auto-services-impl</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.eisgroup.genesis.personalauto</groupId>
      <artifactId>personal-auto-rules-domain</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.eisgroup.genesis.policy.core</groupId>
      <artifactId>policy-core-rules-domain</artifactId>
      <version>${genesis.core.version}</version>
    </dependency>
    <dependency>
      <groupId>com.eisgroup.genesis.personalauto</groupId>
      <artifactId>personal-auto-urm-rating</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.eisgroup.genesis.personalauto</groupId>
      <artifactId>personal-auto-premiums-service-impl</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.eisgroup.genesis.personalauto</groupId>
      <artifactId>personal-auto-stubs</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.eisgroup.genesis.integration</groupId>
      <artifactId>policy-lifecycle-integration</artifactId>
    </dependency>
    <!-- Dependency is temporary until repo separation is complete -->
    <dependency>
      <groupId>com.eisgroup.genesis.kraken</groupId>
      <artifactId>kraken-model-tree-generator</artifactId>
      <version>${genesis.core.version}</version>
      <optional>true</optional>
    </dependency>
    <!-- Test -->

    <dependency>
      <groupId>com.eisgroup.genesis.policy.core</groupId>
      <artifactId>policy-testing</artifactId>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <groupId>com.eisgroup.genesis.test.product</groupId>
