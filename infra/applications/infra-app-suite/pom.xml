<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>infra-app-suite</artifactId>

    <parent>
        <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
        <artifactId>infra-applications-pom</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <name>Infrastructure Applications Suite</name>
    <description>Infrastructure Applications Suite Module</description>
    <packaging>jar</packaging>
    <!-- this is an example of dev-app config, please configure to meet team needs, use "-Dapps=infra -DnoBpm -DnoRating" to start applications -->
    <profiles>
        <profile>
            <id>embedded-app-start</id>
            <activation>
                <property>
                    <name>apps</name>
                    <value>infra</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.eisgroup.genesis.tools</groupId>
                        <artifactId>frunner-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>infra-applications-start</id>
                                <goals>
                                    <goal>start</goal>
                                </goals>
                                <configuration>
                                    <executionName>infra-applications</executionName>
                                    <parallelism>4</parallelism>
                                    <suspendBuild>true</suspendBuild>
                                    <applications>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
                                            <artifactId>infra-facade-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
                                            <artifactId>infra-commands-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
                                            <artifactId>infra-events-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
                                            <artifactId>infra-deployer-app</artifactId>
                                            <version>${project.version}</version>
                                            <priority>1</priority>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto</groupId>
                                            <artifactId>genesis-sso</artifactId>
                                            <version>${sso.ms.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.security.applications</groupId>
                                            <artifactId>security-facade-app</artifactId>
                                            <version>${security.ms.version}</version>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.security.applications</groupId>
                                            <artifactId>security-deployer-app</artifactId>
                                            <version>${security.ms.version}</version>
                                            <priority>2</priority>
                                        </application>
                                        <application>
                                            <groupId>com.eisgroup.genesis.proto.security.applications</groupId>
                                            <artifactId>security-events-app</artifactId>
                                            <version>${project.version}</version>
                                        </application>
                                    </applications>
                                    <systemProperties>
                                        <systemProperty>
                                            <name>genesis.authorization.server.url</name>
                                            <value>http://localhost:8088</value>
                                        </systemProperty>
                                        <systemProperty>
                                            <name>user.timezone</name>
                                            <value>UTC</value>
                                        </systemProperty>
                                        <systemProperty>
                                            <name>genesis.bootstrap.exit.allowed</name>
                                            <value>false</value>
                                        </systemProperty>
                                        <systemProperty>
                                            <name>spring.profiles.active</name>
                                            <value>basic-login</value>
                                        </systemProperty>
                                    </systemProperties>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <!-- infra -->
        <dependency>
            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
            <artifactId>infra-facade-app</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
            <artifactId>infra-commands-app</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
            <artifactId>infra-events-app</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.proto.infra.applications</groupId>
            <artifactId>infra-deployer-app</artifactId>
            <version>${project.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.proto</groupId>
            <artifactId>genesis-sso</artifactId>
            <version>${sso.ms.version}</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.proto.security.applications</groupId>
            <artifactId>security-deployer-app</artifactId>
            <version>${security.ms.version}</version>
            <optional>true</optional>
        </dependency>
    </dependencies>
</project>
