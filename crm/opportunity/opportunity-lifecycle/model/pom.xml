<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <artifactId>opportunity-lifecycle-model</artifactId>
    <packaging>jar</packaging>

    <parent>
        <artifactId>opportunity-pom</artifactId>
        <groupId>com.eisgroup.genesis.proto.opportunity</groupId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <classesDirectory>${project.basedir}/../target/classes</classesDirectory>
                    <includes>
                        <include>genesis/factory-models/*</include>
                        <include>genesis/factory-types/*</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>
    
    <dependencies>
        <dependency>
            <groupId>com.eisgroup.genesis.proto.opportunity</groupId>
            <artifactId>opportunity-lifecycle</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    
</project>