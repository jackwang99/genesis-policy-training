<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>opportunity-pom</artifactId>
        <groupId>com.eisgroup.genesis.proto.opportunity</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>opportunity-lifecycle</artifactId>   

    <build>
        <plugins>
            <plugin>
                <groupId>com.eisgroup.genesis.tools</groupId>
                <artifactId>fcompiler-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <compilers>
                                <compiler>
                                    <groupId>com.eisgroup.genesis.lifecycle</groupId>
                                    <artifactId>state-machine-dsl-fcompiler</artifactId>
                                    <version>${lifecycle.framework.version}</version>
                                </compiler>
                            </compilers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.eisgroup.genesis.tools</groupId>
                <artifactId>fintrospector-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <introspectors>
                                <introspector>
                                    <groupId>com.eisgroup.genesis.lifecycle</groupId>
                                    <artifactId>lifecycle-fintrospector</artifactId>
                                    <version>${lifecycle.framework.version}</version>
                                </introspector>
                            </introspectors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.eisgroup.genesis.tools</groupId>
                <artifactId>fgenerator-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>modeltree</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <addCompileSourceRoot>false</addCompileSourceRoot>
                            <generators>
                                <generator>
                                    <groupId>com.eisgroup.genesis.kraken</groupId>
                                    <artifactId>kraken-model-tree-generator</artifactId>
                                    <version>${genesis.core.version}</version>
                                </generator>
                            </generators>
                            <includes>
                                <include>KrakenModelTreeJavaGenerator</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.eisgroup.genesis.crm</groupId>
            <artifactId>crm-ms-bundle</artifactId>
            <classifier>commands</classifier>
            <type>tile</type>
        </dependency>

        <dependency>
            <groupId>com.eisgroup.genesis.proto.opportunity</groupId>
            <artifactId>opportunity-domain</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.proto.opportunity</groupId>
            <artifactId>opportunity-rules-domain</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>com.eisgroup.genesis.proto.crm</groupId>
            <artifactId>crm-custom-validation</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.proto.crm</groupId>
            <artifactId>crm-services</artifactId>
            <version>${project.version}</version>
        </dependency>
        
        <dependency>
            <groupId>com.eisgroup.genesis.utils</groupId>
            <artifactId>http-utils</artifactId>
        </dependency>

        <!-- Need to be removed after EntityLink resolving will be implemented [GENESIS-3514]-->
        <dependency>
            <artifactId>policy-core-repository-read-impl</artifactId>
            <groupId>com.eisgroup.genesis.policy.core</groupId>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>2.24.0</version>
            <exclusions>
                <exclusion>
                    <groupId>org.mockito</groupId>
