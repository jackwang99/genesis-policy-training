        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.domain</groupId>
            <artifactId>versioning-repository-impl</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.eisgroup.genesis.domain</groupId>
            <artifactId>versioning-impl</artifactId>
            <scope>test</scope>
        </dependency>
        
    </dependencies>
</project>