         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>individual-pom</artifactId>
        <groupId>com.eisgroup.genesis.proto.individual</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>individual-lifecycle</artifactId>   

    <build>
        <plugins>
            <plugin>
                <groupId>com.eisgroup.genesis.tools</groupId>
                <artifactId>fcompiler-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <configuration>
                            <compilers>
                                <compiler>
                                    <groupId>com.eisgroup.genesis.lifecycle</groupId>
                                    <artifactId>state-machine-dsl-fcompiler</artifactId>
                                    <version>${lifecycle.framework.version}</version>
                                </compiler>
                            </compilers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.eisgroup.genesis.tools</groupId>
                <artifactId>fintrospector-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>process-classes</phase>
                        <configuration>
                            <introspectors>
                                <introspector>
                                    <groupId>com.eisgroup.genesis.lifecycle</groupId>
                                    <artifactId>lifecycle-fintrospector</artifactId>
                                    <version>${lifecycle.framework.version}</version>
                                </introspector>
                            </introspectors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.eisgroup.genesis.tools</groupId>
                <artifactId>fgenerator-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>modeltree</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <phase>generate-sources</phase>
                        <configuration>
                            <addCompileSourceRoot>false</addCompileSourceRoot>
                            <generators>
                                <generator>
                                    <groupId>com.eisgroup.genesis.kraken</groupId>
                                    <artifactId>kraken-model-tree-generator</artifactId>
                                    <version>${genesis.core.version}</version>
                                </generator>
                            </generators>
                            <includes>
                                <include>KrakenModelTreeJavaGenerator</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
